@model PagedList<Project2WooxTravel.Models.Entities.Destination>
@using PagedList
@using PagedList.Mvc 
<link href="~/Content/PagedList.css" rel="stylesheet"/>
<div class="visit-country">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="section-heading">
                    <h2>Popüler Tur Ve Seyahat Rotalarımız</h2>
                    <p>Dünyanın Dört Bir Noktasına Alanında Uzman Rehberler Eşliğinde Seyahate Çıkmaya Hazır Mısınız ?</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="items">
                    <div class="row">
                        @foreach (var item in Model) {
                        <div class="col-lg-12">
                            <div class="item">
                                <div class="row">
                                    <div class="col-lg-4 col-sm-5">
                                        <div class="image">
                                            <img src="@item.ImageUrl" alt="">
                                        </div>
                                    </div>
                                    <div class="col-lg-8 col-sm-7">
                                        <div class="right-content">
                                            <h4>@item.Country</h4>
                                            <span>@item.City</span>
                                            <div class="main-button">
                                                <a href="/Default/ExploreTour/@item.DestinationID">Daha Fazlası</a>
                                            </div>
                                            <p>
                                                @(item.Description.Length <= 200 ? item.Description : item.Description.Substring(0, 200) + "...")
                                            </p>

                                            <ul class="info">
                                                <li><i class="fa fa-user"></i> @item.DayNight Gün @(item.DayNight - 1) Gece</li>
                                                <li><i class="fa fa-globe"></i>@item.Price ₺ </li>
                                                <li><i class="fa fa-home"></i>@item.Capacity</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                    <div class="col-md-12">
                        <div class="pagination">
                            @Html.PagedListPager(Model, pageNo => Url.Action("Index", new {pageNo, pageSize = Model.PageSize}))
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
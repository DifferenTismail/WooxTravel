@model Project2WooxTravel.Models.Entities.Reservation
<div class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2>Bir Seyahatmi Planlıyorsunuz ?</h2>
                <h4>3 Dakika içerisinde seyahatini planla</h4>
            </div>
            <div class="col-lg-4">
                <div class="border-button">
                    <button style="border:1px solid black;" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Rezervasyon</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Rezervasyon Modal -->
<div class="modal fade" id="Modal1" tabindex="-1" role="dialog" aria-labelledby="Modal1Label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="Modal1Label">Rezervasyon Yap</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="/Default/NewRezervation/">
                    <div class="form-group">
                        <label for="name">Adınız</label>
                        <input type="text" class="form-control" name="Name" id="Name" placeholder="Adınızı girin">
                    </div>
                    <div class="form-group">
                        <label for="email">Telefon Numaranız</label>
                        <input type="number" class="form-control" name="Phone" id="Phone" placeholder="Telefon Numaranızı girin">
                    </div>
                    <div class="form-group">
                        <label for="email">Kişi Sayısı</label>
                        <input type="number" class="form-control" name="PersonCount" id="PersonCount" placeholder="Kişi Sayısı">
                    </div>
                    <div class="form-group">
                        <label for="date">Rezervasyon Tarihi</label>
                        <input type="date" class="form-control" name="ReservationDate" id="ReservationDate">
                    </div>
                    <div class="form-group">
                        <label for="message">Mesaj</label>
                        <textarea class="form-control" id="Description" rows="3" placeholder="Mesajınızı girin" name="Description"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-primary">Rezervasyonu Tamamla</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <p>
                    Copyright © @DateTime.Now.Year <a href="#">WoOx Travel</a> Company. Tüm Hakları Saklıdır.
                    <br>Design: <a href="https://templatemo.com" target="_blank" title="free CSS templates">TemplateMo</a> Distribution: <a href="https://themewagon.com target="_blank">ThemeWagon</a>
                </p>
            </div>
        </div>
    </div>
</footer>
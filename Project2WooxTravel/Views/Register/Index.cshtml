@model Project2WooxTravel.Models.Entities.Admin
@{
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="max-width: 500px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <div class="text-center mb-4">
                <i class="fas fa-user-plus fa-3x text-primary"></i>
                <h3 class="mt-3">Yeni Kullanıcı Kayıt Sayfası</h3>
            </div>

            <form method="post">
                <div class="form-group mb-3">
                    <label for="name" class="form-label">Adınız</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @id = "name", @placeholder = "Adınızı girin" })
                </div>

                <div class="form-group mb-3">
                    <label for="surname" class="form-label">Soyadınız</label>
                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", @id = "surname", @placeholder = "Soyadınızı girin" })
                </div>

                <div class="form-group mb-3">
                    <label for="email" class="form-label">Email Adresiniz</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @id = "email", @placeholder = "Email adresinizi girin" })
                </div>

                <div class="form-group mb-3">
                    <label for="username" class="form-label">Kullanıcı Adınız</label>
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @id = "username", @placeholder = "Kullanıcı adınızı girin" })
                </div>

                <div class="form-group mb-4">
                    <label for="password" class="form-label">Şifreniz</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", @id = "password", @placeholder = "Şifrenizi girin" })
                </div>

                <button type="submit" class="btn btn-primary w-100">Kaydol</button>
            </form>
        </div>
    </div>
</div>
